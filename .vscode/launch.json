{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Lanzar Tests",
			"runtimeVersion": "12.22.5",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/node_modules/.bin/ts-mocha",
			"args": [
				"--require=ts-node/register",
				"--loader=ts-node/esm",
				"--no-warnings",
				"--experimental-modules",
				"--experimental-specifier-resolution=node",
				"-p",
				"tsconfig.json",
				"${workspaceFolder}/tests/main.ts",
				"${workspaceFolder}/tests/**/*.test.ts"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Lanzar Cli",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/node_modules/.bin/ts-node",
			"cwd": "${workspaceRoot}",
			"runtimeVersion": "12.22.5",
			"runtimeArgs": [
				"--require=ts-node/register",
				"--loader=ts-node/esm",
				"--no-warnings",
				"--experimental-modules",
				"--experimental-specifier-resolution=node"
			],
			"args": [
				"${workspaceFolder}/src/cli.ts",
				"testnet",
				"build",
				"qr",
				"-a",
				"{\"type\":\"tx\",\"title\":\"Demo\",\"description\":\"created with gamechanger-dapp-cli\",\"metadata\":{\"123\":{\"message\":\"Hello World!\"}}}",
				"-o",
				"test.png",
				"-t",
				"boxed",
				"-h",
				"Cambiando el head"
			]
		}
	]
}
