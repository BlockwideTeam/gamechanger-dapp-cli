{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"isolatedModules": false,
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["node", "mocha"],
		"rootDirs": ["src"]
	},
	"exclude": ["src/types"],
	"include": ["src", "./node_modules/easyqrcodejs-nodejs/index.d.ts"],
	"ts-node": {
		"transpileOnly": true,

		"files": true,

		"compilerOptions": {}
	}
}
