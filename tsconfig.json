{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"allowJs": false,
		"checkJs": false,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"isolatedModules": true,
		"baseUrl": "dist",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["node", "mocha"],
		"importHelpers": true
	},
	"exclude": ["src/types"],
	"include": [
		"test.ts",
		"src/**/*",
		"src/index.d.ts",
		"./node_modules/easyqrcodejs-nodejs/index.d.ts",
		"tests/main.ts",
		"tests/*.test.ts"
	]
}
